.nav
	& ul
		margin 0
		padding 0
					
		& li
			position relative
			display block
			
			@media (min-width $grid-float-breakpoint)
				display inline-block
				padding 5px 10px

			& a
				display block
				
	&__drop
		li
			display block !important
	
	&__has-child
		position relative
	&__has-child:hover ^[0]__drop
		display block

	@media screen and (min-width $grid-float-breakpoint)
		&__drop
			display none
			absolute top 100% left 0
			background #FFF 
			border 1px solid #ccc
			width 200px

@media (max-width $grid-float-breakpoint-max)
	.collapse
		transform translateX($menu-width)
		
	.nav
		position fixed
		top 0
		bottom 0
		left 100% 
		padding-top 30px
		background-color $menu-bg-color
		height 100%
		width $menu-width
		overflow-y auto
		z-index $zindex-navbar
		transform translateX($menu-width) 
		transition all 300ms 
	
		&.shown
			display block
			transform translateX(-($menu-width))
			box-shadow 2px -10px 6px 1px rgba(0,0,0,0.5)
			
		&__drop
			background none
			margin-left 10px !important
