.menu-toggle
	position fixed
	display none
	width 22px
	height 18px
	top 20px
	left 20px
	cursor pointer
	background-color $gray-lighter
	z-index $zindex-menu-toggle
	
	& span
		display block
		width 100% 
		height 2px
		background-color $black
		margin-bottom 6px 
		
		&:nth-child(3)
			margin-bottom 0
			
	@media screen and (max-width $grid-float-breakpoint-max)
		display block